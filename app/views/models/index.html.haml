%h1 Tüm Motorlar
%table{:border => "1"}
  %tr
    %td Adı
    %td işlemler
  - @models.each do |model|
    %tr
      %td= model.name
      %td
        = link_to("Göster",model_path(model.id))
        = link_to("Güncelle",edit_model_path(model.id))
        = link_to 'Sil', model_path(model.id), method: :delete, data: {:confirm => 'Emin misiniz?'}
= link_to "Yeni model ekle",new_model_path
